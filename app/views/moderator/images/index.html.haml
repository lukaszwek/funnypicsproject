%h1 Listing images

%table
  %thead
    %tr
      %th User
      %th Title
      %th Image
      %th
      %th
      %th

  %tbody
    - @images.each do |image|
      %tr
        %td= image.user.nick
        %td= image.title
        %td= image_tag image.image(:medium)
        %td= link_to 'Show', moderator_image_path(image)
        %td= button_to 'Accept', accept_moderator_image_path(image), :method => :patch
        %td= link_to 'Destroy', moderator_image_path(image), :method => :delete, :data => { :confirm => 'Are you sure?' }


